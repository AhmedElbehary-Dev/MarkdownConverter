<Window x:Class="MarkdownConverter.UI.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MarkdownConverter.Controls"
        Title="Markdown Converter Pro"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        UseLayoutRounding="True">
    <Border Background="{StaticResource BrushSurface}"
            BorderBrush="{StaticResource BrushBorder}"
            BorderThickness="1"
            CornerRadius="{StaticResource CornerCard}"
            Padding="16"
            Effect="{StaticResource CardShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleText"
                           Text="Markdown Converter Pro"
                           FontSize="15"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                <controls:FlatButton Grid.Column="1"
                                     Style="{StaticResource IconButtonSmallStyle}"
                                     Background="{StaticResource BrushSurface2}"
                                     BorderBrush="{StaticResource BrushBorder}"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Top"
                                     Click="CloseButton_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE8BB;"
                               FontSize="14"
                               Foreground="{StaticResource BrushText}" />
                </controls:FlatButton>
            </Grid>

            <Grid Grid.Row="1" Margin="0,12,0,12" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Width="40"
                        Height="40"
                        Background="{StaticResource BrushSurface2}"
                        BorderBrush="{StaticResource BrushBorder}"
                        BorderThickness="1"
                        CornerRadius="10">
                    <TextBlock x:Name="IconGlyph"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <ScrollViewer Grid.Column="2"
                              MaxWidth="520"
                              MaxHeight="240"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalAlignment="Center">
                    <TextBlock x:Name="MessageText"
                               TextWrapping="Wrap"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource BrushText}" />
                </ScrollViewer>
            </Grid>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <controls:FlatButton Content="OK"
                                     Width="96"
                                     Click="OkButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
